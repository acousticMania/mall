	<security:jdbc-user-service data-source-ref="dataSource" id="userSecurityService"
		users-by-username-query="SELECT
								 EMAIL as username 
								, USER_PWD as password
								, ENABLED as enabled
							FROM
								MBR_MEMBER
							WHERE 
								EMAIL = ?
							AND USE_YN = 'Y'"
							
		authorities-by-username-query="
						SELECT
								 EMAIL as username 
								, AUTHORITY as authority
							FROM
								MBR_MEMBER
							WHERE 
								EMAIL = ?
							AND USE_YN = 'Y'"
		/>
	
	<security:authentication-manager>
		<security:authentication-provider user-service-ref="userSecurityService">
			<security:password-encoder ref="passwordEncoder"/>
		</security:authentication-provider>
	</security:authentication-manager>
	
	<!-- μ•”νΈν™” -->	
	<bean id="passwordEncoder" class="org.springframework.security.authentication.encoding.ShaPasswordEncoder">
	  <constructor-arg name="strength" value="256"></constructor-arg>
	</bean>
</beans>
